modules = ["python-3.11", "web", "nodejs-20"]
run = "docker compose up -d --build"

[nix]
channel = "stable-24_05"
packages = ["openssl", "postgresql", "sqlite"]

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "docker compose up -d --build"]

[workflows]
runButton = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[ports]]
localPort = 5000
externalPort = 80
